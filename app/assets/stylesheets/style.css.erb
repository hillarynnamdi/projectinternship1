body{

	background-color: grey;
	margin:0px;
	padding:0px;
	
}
/* clients page styles below */

.client_wrapper{
	background-color: white;
	height: 700px;
	width:justify;

}

.table_div{
	margin-left: 170px;
	margin-top: 50px;
	padding-top: 50px;
	
	
}

.client_table{

	text-align: center;
}

.client_list{

	width:700px;
	height: 600px;
	background-color: grey;
	margin: auto;
	border-radius: 10px;
}

.client_link{
	margin-right: 30px;
	float: right;
}

/*this is the dashboard styles below */
.dashboard_wrapper{

	margin: auto;
	height: 700px;
	background-color: white;
	background-image: url("<%= asset_data_uri 'building.jpg' %>");

}

.dashboard_header{
	float: left;
	font-family: 'Source Sans Pro' , serif;
	
	width: 1350px;
	
}

.invoicer_div{
	background-color: white;
	border-radius: 5px;
	width: 100px;
	margin-left: 20px;
}

.dashboard_header_text{
	text-transform: capitalize;
	text-align: center;
}

.company_name{
	text-transform: uppercase;
	background-color: blue;
	color: white;
	border-radius: 5px;
	text-align: justify;
	float: right;
	margin-top: -50px;
	margin-right: 20px;
	font-size: 20px;
	font-family: 'Source Sans Pro' , serif;
}
.welcome{

	width:960px;
	margin:auto;
	background-color: white;
	padding:15px;
	height:400px;
	color:grey;
	text-decoration:underline;
}

.welcome_links{
	width:60%;
	margin:auto;
	text-align: center;

}

.welcome_links li{
	display:inline-block;
	margin-right:20px;
	text-align:center;
	width:30%;
	background-color:#eeeeee;
	margin:5px;
	height:50px;
	padding-top:30px;
	border-radius:100%;
	box-shadow: 0px 3px 5px black
	

}

.welcome_links li:hover{
	background-color:silver;
	color:#eeeeee;

}

.welcome_links li a:hover{
	background-color:silver;
	color:#eeeeee;

}


.welcome_links li a{
color:grey;
text-decoration: none;
font-family:sans-serif;
letter-spacing:1px;
	
}



h1{

	text-align: center;
	
}
.table_wrapper{
	background-color: white;
	width: 960px;
	margin: auto;
	border-radius: 5px;
	box-shadow: 0px 3px 5px rgba(0,0,0,0.4)

}

.table_wrapper table {

border:0px solid grey;

}

.table_wrapper table td {

padding :10px;
font-family: 'Source Sans Pro' , serif;
font-size:14px;
letter-spacing:0.5px;
width:100%;

}

.table_wrapper table td input {

box-shadow: 0px 3px 5px rgba(0,0,0,0.4)

}


.table_wrapper table td select {

width:100%

}

#sign_up_error_div{

	border:1px solid silver;
	position:absolute;
	background-color:#fffeee;
	margin:0px;
	width:960px;

	box-shadow: 0px 5px 5px #eeeeee;


}



.inner_table_div{
	margin: auto;
	width: 430px;
	margin-top: 10px;
	padding-top:10px;
	
}



.table_wrapper fieldset{
	border: 0px solid yellow;
	
}

.legend_text{
	background-color: #eeeeee;
	border-radius: 7px;
	font-size:20px;
	padding:10px;
	font-family: 'Source Sans Pro' , serif;
}


.field_with_errors {

    border:1px solid red;
    

}

.errorli{
color:red;
font-family: 'Source Sans Pro' , serif;
font-size:12px;

}

.errorpara{
	color:red;
	
	font-weight:bold;
	font-family:tahoma;
	font-size:17px;
}

.thank_you_div{
width:60%;
margin:100px auto;
text-align:center;
font-family:tahoma;
font-size:15px;
background-color:white;
height:300px;
padding-top:100px;
box-shadow: 0px 3px 5px white

}


.thank_you_div div{
width:60%;
margin:0px auto;
font-size:20px;
background-color:#eeeeee;
padding:40px;
box-shadow: 0px 5px 5px silver

}

.thank_you_div span{
cursor:pointer;
text-decoration:underline;
color:blue;



}


.loginwrapper{
		width:60%;
		margin:40px auto;
		background-color:white;
		box-shadow: 0px 3px 5px #eeeeee

}

.loginwrapper table{
		width:60%;
		margin:auto;
		padding:10px;
		font-family: 'Source Sans Pro' , serif;
		font-size:14px;
		

}

.loginwrapper table input{
	
	box-shadow: 0px 3px 5px #eeeeee

}

.loginwrapper table td {
	
	padding:10px;

}


#loginflash{
	color:red;
	text-decoration:none;
	font-family: 'Source Sans Pro' , serif;

}